    <RepositoryUrl>https://github.com/medo64/passwordsafe</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <PackageProjectUrl>https://www.medo64.com/passwordsafe/</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/medo64/PasswordSafe/blob/master/LICENSE.md</PackageLicenseUrl>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
    <Version>1.0.0</Version>
    <RootNamespace>Medo.Security.Cryptography.PasswordSafe</RootNamespace>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>..\..\Binaries\netstandard2.0\PasswordSafe.xml</DocumentationFile>
    <OutputPath>..\..\Binaries\</OutputPath>
